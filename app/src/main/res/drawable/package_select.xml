<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EFC5C2" />
            <stroke
                android:width="1dp"
                android:color="#EFC5C2" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/bright" />

            <stroke
                android:width="2dp"
                android:color="@color/mandatory" />
            <corners
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>