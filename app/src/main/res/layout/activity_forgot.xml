<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ForgotActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:onClick="backtologin"
            android:layout_gravity="center|left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/forgottitle"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/edittextback"
                android:layout_marginTop="50dp"
                android:singleLine="true"
                android:padding="5dp"
                android:id="@+id/etx_email"
                android:textColor="@color/black"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:hint="Email"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lyt_forgot"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edittextback"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:id="@+id/etx_code"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:hint="@string/verifycode"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edittextback"
                    android:layout_marginTop="30dp"
                    android:singleLine="true"
                    android:id="@+id/etx_password"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:hint="Contraseña"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edittextback"
                    android:layout_marginTop="30dp"
                    android:singleLine="true"
                    android:id="@+id/etx_confirmpassword"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:hint="Confirmar contraseña"/>
            </LinearLayout>



            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="INGRESAR"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:onClick="callforgot"
                android:background="@drawable/loginbuttonback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:padding="5dp"
                android:onClick="backtologin"
                android:textColor="@color/black"
                android:text="@string/backtologin"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>